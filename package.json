{
  "name": "worker-threads-typescript",
  "version": "1.0.0",
  "description": "application typescript using worker threads",
  "main": "./src/bin/www.ts",
  "scripts": {
    "test": "cross-env TS_NODE_PROJECT=config/test/tsconfig.test.json mocha -r ts-node/register src/app/**/*.spec.ts",
    "clean": "rimraf -G ./build/* && rimraf -G ./logs/*",
    "remove:docker-image-dev": "docker image rm -f worker-threads-typescript-dev",
    "remove:docker-image-prod": "docker image rm -f worker-threads-typescript-prod",
    "lint": "eslint -c .eslintrc.js --ext .ts src/**/*.ts",
    "build:pm2": "pm2 kill && yarn clean && yarn lint && yarn test && webpack",
    "start:pm2-dev": "NODE_ENV=development yarn build:pm2",
    "run:pm2-dev": "pm2 delete ./config/pm2/pm2-dev-process.config.js && pm2 start ./config/pm2/pm2-dev-process.config.js",
    "start:pm2-prod": "NODE_ENV=production yarn build:pm2",
    "run:pm2-prod": "pm2 delete ./config/pm2/pm2-prod-process.config.js && pm2 start ./config/pm2/pm2-prod-process.config.js",
    "start:docker": "NODE_ENV=development NODE_DOCKER=true yarn build:docker",
    "build:docker": "yarn clean && yarn lint && yarn test && webpack",
    "start:docker-dev": "NODE_ENV=development NODE_DOCKER=true yarn build:docker-dev",
    "build:docker-dev": "yarn remove:docker-image-dev && yarn clean && yarn lint && yarn test && webpack",
    "run:docker-dev": "docker build -f Dockerfile.dev -t worker-threads-typescript-dev .",
    "start:docker-prod": "NODE_ENV=production NODE_DOCKER=true yarn build:docker-prod",
    "build:docker-prod": "yarn remove:docker-image-prod && yarn clean && yarn lint && yarn test && webpack",
    "run:docker-prod": "docker build -f Dockerfile.prod -t worker-threads-typescript-prod .",
    "start:dev": "NODE_ENV=development NODE_LOCAL=true yarn build:dev",
    "build:dev": "yarn clean && yarn lint && webpack",
    "run:dev": "NODE_ENV=development PORT=7030 node build/main.bundle.js",
    "start:prod": "NODE_ENV=production NODE_LOCAL=true yarn build:prod",
    "build:prod": "yarn clean && yarn lint && yarn test && webpack",
    "run:prod": "NODE_ENV=production PORT=7030 node build/main.bundle.js",
    "start": "ts-node src/bin/www.ts",
    "dev": "nodemon"
  },
  "keywords": [
    "express",
    "nodejs",
    "swc",
    "chai",
    "mocha",
    "typescript",
    "pm2",
    "webpack",
    "tslog",
    "zod"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dhianica/worker-threads-typescript.git"
  },
  "author": "Muchamamd Ilham",
  "contributors": [
    {
      "name": "Ahmed Khalil Bejaoui",
      "url": "https://github.com/AhmedCommando/node-typescript-webpack"
    }
  ],
  "license": "MIT",
  "devDependencies": {
    "@swc/core": "^1.3.11",
    "@swc/helpers": "^0.4.12",
    "@types/amqplib": "^0.8.2",
    "@types/chai": "^4.3.3",
    "@types/glob": "^8.0.0",
    "@types/lodash": "^4.14.186",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.11.7",
    "@types/source-map": "0.5.2",
    "@types/supertest": "^2.0.12",
    "@types/webpack": "^5.28.0",
    "@types/webpack-sources": "^3.2.0",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/eslint-plugin-tslint": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "ajv": "^8.11.0",
    "chai": "^4.3.6",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.6",
    "eslint": "^8.26.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-sonarjs": "^0.16.0",
    "favicons-webpack-plugin": "^6.0.0-alpha.2",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "npm-check-updates": "^16.3.16",
    "regenerator-runtime": "^0.13.10",
    "source-map": "^0.7.4",
    "supertest": "^6.3.1",
    "swc-loader": "^0.2.3",
    "terser-webpack-plugin": "^5.3.6",
    "ts-node": "^10.9.1",
    "tslog": "^3.3.4",
    "typescript": "^4.8.4",
    "uuid": "^9.0.0",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-node-externals": "^3.0.0",
    "webpack-shell-plugin-next": "^2.2.2"
  },
  "dependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/express": "^4.17.14",
    "amqplib": "^0.10.3",
    "express": "^4.18.2",
    "body-parser": "^1.20.1",
    "debug": "^4.3.4",
    "lodash": "^4.17.21",
    "reflect-metadata": "^0.1.13",
    "serve-favicon": "^2.5.0"
  }
}
